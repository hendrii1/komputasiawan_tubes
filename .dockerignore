# Ignore node modules and vendor directories since they are installed within the container
/node_modules
/vendor

# Ignore environment variables file
.env

# Ignore log files and caches
storage/logs/*
storage/framework/cache/*
storage/framework/sessions/*
storage/framework/views/*

# Ignore Vite development output (optional, depending on your build setup)
public/hot
public/storage
public/mix-manifest.json

# Ignore local environment setup files
Homestead.yaml
Homestead.json
.env.backup

# Ignore git folder and files
.git
.gitignore

# Ignore IDE and editor folders/files
.vscode
.idea

# Ignore Dockerfile and docker-compose files to avoid copying them to the container
Dockerfile
docker-compose.yml
.dockerignore

# Ignore composer lock file if it's not relevant to the build
composer.lock

# Ignore npm debug log
npm-debug.log
yarn-error.log
pnpm-debug.log

# Ignore OS generated files
.DS_Store
Thumbs.db
